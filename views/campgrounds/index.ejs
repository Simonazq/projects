<% include ../partials/header %>

<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>This is the campGround Page</h1>
            <p>Hello, World</p>
            <p>
                <a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add New CampGround</a>
            </p>
        </div>
    </header>
    
    <div class = "row text-center">
        <% camp.forEach(function(c) { %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <img src = "<%= c.img %>">
                    <div class = "caption">
                        <h4><%= c.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%=c.id %>" class = "btn btn-primary">More Information</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>